{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "About Schema",
  "description": "Schema for personal/about information",
  "type": "object",
  "required": ["name", "headline", "bio"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Full name",
      "minLength": 1,
      "maxLength": 100
    },
    "headline": {
      "type": "string",
      "description": "Professional headline or tagline",
      "minLength": 1,
      "maxLength": 200
    },
    "bio": {
      "type": "string",
      "description": "Personal biography or description",
      "minLength": 10,
      "maxLength": 1000
    },
    "avatar": {
      "type": "string",
      "description": "Profile image URL",
      "format": "uri"
    },
    "contact": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "description": "Primary email address",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "description": "Phone number",
          "pattern": "^[+]?[0-9\\s\\-\\(\\)]+$"
        },
        "location": {
          "type": "string",
          "description": "City, Country or general location",
          "maxLength": 100
        },
        "social": {
          "type": "object",
          "properties": {
            "twitter": {
              "type": "string",
              "description": "Twitter/X profile URL",
              "format": "uri"
            },
            "github": {
              "type": "string",
              "description": "GitHub profile URL",
              "format": "uri"
            },
            "linkedin": {
              "type": "string",
              "description": "LinkedIn profile URL",
              "format": "uri"
            },
            "instagram": {
              "type": "string",
              "description": "Instagram profile URL",
              "format": "uri"
            },
            "dribbble": {
              "type": "string",
              "description": "Dribbble profile URL",
              "format": "uri"
            },
            "behance": {
              "type": "string",
              "description": "Behance profile URL",
              "format": "uri"
            },
            "medium": {
              "type": "string",
              "description": "Medium blog URL",
              "format": "uri"
            },
            "youtube": {
              "type": "string",
              "description": "YouTube channel URL",
              "format": "uri"
            },
            "portfolio": {
              "type": "string",
              "description": "Portfolio website URL",
              "format": "uri"
            }
          }
        }
      }
    },
    "availability": {
      "type": "boolean",
      "description": "Whether available for work",
      "default": false
    },
    "resume": {
      "type": "string",
      "description": "Resume/CV download URL",
      "format": "uri"
    },
    "interests": {
      "type": "array",
      "description": "Personal interests and hobbies",
      "items": {
        "type": "string"
      },
      "maxItems": 20
    },
    "education": {
      "type": "array",
      "description": "Educational background",
      "items": {
        "type": "object",
        "properties": {
          "degree": {
            "type": "string",
            "description": "Degree or certification name"
          },
          "institution": {
            "type": "string",
            "description": "School or institution name"
          },
          "year": {
            "type": "integer",
            "description": "Graduation year",
            "minimum": 1900,
            "maximum": 2030
          },
          "description": {
            "type": "string",
            "description": "Additional details about the education"
          }
        }
      }
    },
    "experience": {
      "type": "array",
      "description": "Work experience",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Job title"
          },
          "company": {
            "type": "string",
            "description": "Company name"
          },
          "startDate": {
            "type": "string",
            "description": "Start date (YYYY-MM format)",
            "pattern": "^\\d{4}-\\d{2}$"
          },
          "endDate": {
            "type": "string",
            "description": "End date (YYYY-MM format) or 'Present'",
            "pattern": "^(\\d{4}-\\d{2}|Present)$"
          },
          "description": {
            "type": "string",
            "description": "Job description and responsibilities"
          },
          "url": {
            "type": "string",
            "description": "Company website URL",
            "format": "uri"
          }
        }
      }
    }
  }
} 